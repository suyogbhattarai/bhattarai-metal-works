        const shineTexts = document.querySelectorAll('.text-metal-shine');
    
    shineTexts.forEach((text) => {
      // Create continuous shimmer effect
      gsap.to(text, {
        backgroundPosition: '200% center',
        duration: 3,
        ease: 'none',
        repeat: -1,
      });

      // Add glow pulse
      gsap.to(text, {
        filter: 'brightness(1.3) contrast(1.2) drop-shadow(0 0 8px rgba(255,255,255,0.4))',
        duration: 2,
        ease: 'sine.inOut',
        repeat: -1,
        yoyo: true,
      });
    });

    // Hover animations
    shineTexts.forEach((text) => {
      const element = text as HTMLElement;
      let hoverTween: gsap.core.Tween | null = null;
      
      element.addEventListener('mouseenter', () => {
        // Kill any existing animations
        gsap.killTweensOf(element);
        
        // Add coral class for solid color
        element.classList.add('coral-active');
        
        // Quick scale up with vertical spacing
        gsap.to(element, {
          scale: 1.1,
          letterSpacing: '0.15em',
          marginTop: '20px',
          marginBottom: '20px',
          duration: 0.2,
          ease: 'power1.out',
        });
        
        // Apply coral glow
        gsap.to(element, {
          filter: 'brightness(1.5) contrast(1.3) drop-shadow(0 0 20px rgba(231,111,81,0.8))',
          duration: 0.3,
          ease: 'power1.out',
        });
      });

      element.addEventListener('mouseleave', () => {
        // Kill hover animation
        if (hoverTween) hoverTween.kill();
        gsap.killTweensOf(element);
        
        // Remove coral class
        element.classList.remove('coral-active');
        
        // Quick scale down with margin reset
        gsap.to(element, {
          scale: 1,
          letterSpacing: '0.05em',
          marginTop: '0px',
          marginBottom: '0px',
          duration: 0.2,
          ease: 'power1.out',
        });
        
        // Return to normal glow
        gsap.to(element, {
          filter: 'brightness(1.15) contrast(1.1) drop-shadow(0 0 6px rgba(255,255,255,0.3))',
          duration: 0.3,
          ease: 'power1.out',
        });
        
        // Resume normal shimmer
        gsap.to(element, {
          backgroundPosition: '200% center',
          duration: 3,
          ease: 'none',
          repeat: -1,
        });
      });
    });

    // Marquee animation
    const marqueeAnimation = () => {
      gsap.fromTo(
        firstText.current,
        { y: () => -firstText.current!.scrollHeight / 2 },
        {
          y: 0,
          repeat: -1,
          duration: 150,
          ease: "linear",
        }
      );

      gsap.fromTo(
        secondText.current,
        { y: 0 },
        {
          y: () => -secondText.current!.scrollHeight / 2,
          repeat: -1,
          duration: 150,
          ease: "linear",
        }
      );
    };
    marqueeAnimation();